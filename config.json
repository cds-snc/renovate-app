{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate-cds/",
  "username": "renovate-cds[bot]",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "allowPlugins": true,
  "allowedCommands": [
    "^make release$",
    "^npm install$",
    "^npm run build$"
  ],
  "repositories": [
    "cds-snc/dns-proxy-action",
    "cds-snc/gc-articles",
    "cds-snc/github-repository-metadata-exporter",
    "cds-snc/terraform-plan"
  ],
  "customEnvVariables": {
    "WPML_KEY": "%ARTICLES_WPML_KEY%",
    "WPML_USER_ID": "%ARTICLES_WPML_USER_ID%"    
  }
}